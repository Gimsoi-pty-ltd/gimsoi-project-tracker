{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "AWS Access Key (Strict)",
            "pattern": "/AKIA[0-9A-Z]{16}/"
          },
          {
            "name": "Google/Gemini Key (Paranoid)",
            "pattern": "/AIza[0-9A-Za-z\\-_]{20,}/"
          },
          {
            "name": "Generic Secret (Catch-All)",
            "pattern": "/(api_key|apikey|secret|token)['\"]?\\s*[:=]\\s*['\"][A-Za-z0-9_\\-]{10,}['\"]/i"
          }
        ]
      }
    }
  ]
}
