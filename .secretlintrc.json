{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "CRITICAL-Google-Key",
            "pattern": "/AIza[0-9A-Za-z\\-_]{20,}/"
          },
          {
            "name": "CRITICAL-JWT",
            "pattern": "/eyJ[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+/"
          }
        ]
      }
    }
  ]
}
